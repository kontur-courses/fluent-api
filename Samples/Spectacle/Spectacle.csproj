    <OutputType>Exe</OutputType>
    <AssemblyName>SpectacleSample</AssemblyName>
    <RootNamespace>SpectacleSample</RootNamespace>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
